<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartFlow.Shared.Views.HeaderView"
              xmlns:y="clr-namespace:SmartFlow.Shared;assembly=SmartFlow.Shared">
    <ContentView.Content>
        <Grid AutomationId="AutomationId_Header_Grid" BackgroundColor="{StaticResource SmartFlow_Header_Color}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="70*" />
            </Grid.ColumnDefinitions>
            <Image AutomationId="AutomationId_Header_Image" Grid.Column="0" Source="ica_logo" Margin="3" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
            <StackLayout AutomationId="AutomationId_Header_STL" Grid.Column="1" Spacing="1" VerticalOptions="Center" HorizontalOptions="StartAndExpand">
                <Label AutomationId="AutomationId_Header_Label1" Grid.Column="1" x:Name="header_line1" FontSize="Small" TextColor="{StaticResource Text_Color}" HorizontalOptions="Start" VerticalOptions="Center"/>
                <Label AutomationId="AutomationId_Header_Label2" Grid.Column="1" x:Name="header_line2" FontSize="Small" TextColor="{StaticResource Text_Color}" HorizontalOptions="Start" VerticalOptions="Center"/>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>