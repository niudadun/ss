<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:y="clr-namespace:SmartFlow.Shared;assembly=SmartFlow.Shared"
             x:Class="SmartFlow.Shared.Views.InfoView">

    <StackLayout AutomationId="AutomationId_Info_STL" x:Name="InfoPageView" Spacing="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Orientation="Vertical" IsEnabled="False">
        <Button AutomationId="AutomationId_Info_Btn" x:Name="InfoButtonName" IsEnabled="False" WidthRequest="120" HeightRequest="120" Image="ic_exclamation_blue" BackgroundColor="{StaticResource SmartFlow_Yellow}" 
                HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" BorderRadius="60"/>
        <Label AutomationId="AutomationId_Info_Label" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" x:Name="LabelText" Style="{StaticResource StandardFont}" Margin="50" LineBreakMode="WordWrap" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
    </StackLayout>


</ContentView>