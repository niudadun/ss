<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:views="clr-namespace:SmartFlow.Shared.Views"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:y="clr-namespace:SmartFlow.Shared;assembly=SmartFlow.Shared"
             xmlns:ci="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions" 
             x:Class="SmartFlow.Shared.Views.ManageProfilePage">
    <Grid RowSpacing="0" x:Name="pageGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="12*" />
            <RowDefinition Height="76*" />
            <RowDefinition Height="12*" />
        </Grid.RowDefinitions>
        <StackLayout AutomationId="AutomationId_Stacklayout_Header" Grid.Row="0" BackgroundColor="{StaticResource SmartFlow_Header_Color}" Orientation="Horizontal">
            <views:HeaderView AutomationId="AutomationId_HeaderView"/>
        </StackLayout>
        <StackLayout  VerticalOptions="Fill" Grid.Row="1" AutomationId="AutomationId_ContentView">
            <Grid x:Name="MainGrid" AutomationId="AutomationId_GridView">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Grid.Row="2" Padding="0" Spacing="0">
            <views:FooterView  x:Name="FooterViewId" AutomationId="AutomationId_FooterView"/>
        </StackLayout>
        <StackLayout Grid.Row="0" Grid.RowSpan="3" Spacing="0" IsVisible="{Binding IsLoading}" Opacity="0.5" BackgroundColor="{StaticResource Text_Color}" HorizontalOptions="Fill" VerticalOptions="Fill">
            <ActivityIndicator IsVisible="{Binding IsLoading}" IsRunning="{Binding IsLoading}" WidthRequest="120" HeightRequest="120" Color="{StaticResource SmartFlow_Yellow}" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand"/>
            <Label x:Name="LoadingText" Style="{StaticResource StandardFont}" Margin="0,20,0,0" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" />
            <Label FontSize="30" Margin="0" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </Grid>
</ContentPage>
